{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "incremental": true,
    "baseUrl": "src"
  },
  "ts-node": {
    "swc": true
  },
  "exclude": ["build", "node_modules"],
  "include": ["src/**/*.ts"]
}
