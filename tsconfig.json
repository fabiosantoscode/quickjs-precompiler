{
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "incremental": true,
    "baseUrl": "src",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo"
  },
  "ts-node": {
    "swc": true
  },
  "exclude": ["build", "node_modules"],
  "include": ["src/**/*.ts"]
}
